<?xml version="1.0" encoding="UTF-8" ?>
<Apis>
    <Api Name="MIR" HttpVersion="HTTP/1.1">
        <Instances>
            <Instance Name="primary" Host="127.0.0.1" Port="8080" Protocol="http" />
            <Instance Name="secondary" Host="127.0.0.1" Port="8081" Protocol="http" />
        </Instances>
        <Endpoints>
            <Endpoint Name="map">
                <Request Method="POST">
                    <Uri Path="/map/{guid}">
                        <QueryParameters>
                            <Parameter Key="test" Value="value" />
                            <Parameter Key="hello" />
                        </QueryParameters>
                    </Uri>
                    <Headers>
                        <Header Name="Auth" Key="Authorization" Value="Bearer token" />
                        <Header Name="CI" Key="ClientIdentifier" />
                    </Headers>
                    <Fields Format="json">
                        <Field Name="Test" Path="Hello.world.Test" />
                        <Field Name="Data" Path="Hello.World.hi" Value="test" />
                    </Fields>
                    <Responses>
                        <Response Code="200">
                            <Headers>
                                <Header Name="CType" Key="Content-Type" />
                            </Headers>
                            <Fields Format="json">
                                <Field Name="GUID" Path="guid" />
                                <Field Name="Date" Path="date" />
                                <Field Name="TestWithDefault" Path="asdjioashduiauid" Value="DefaultValue" />
                            </Fields>
                        </Response>
                        <Response Code="500">
                            <Headers>
                                <Header Name="CType" Key="Content-Type" />
                            </Headers>
                            <Fields Format="json">
                                <Field Name="Error" Path="Variable.Error" />
                            </Fields>
                        </Response>
                    </Responses>
                </Request>
            </Endpoint>
        </Endpoints>
    </Api>
</Apis>
